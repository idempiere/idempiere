<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.idempiere</groupId>
		<artifactId>org.idempiere.parent</artifactId>
		<version>${revision}</version>
		<relativePath>org.idempiere.parent/pom.xml</relativePath>
	</parent>
	<properties>
		<skipClean>true</skipClean>
	</properties>
	<artifactId>org.adempiere.modelgenerator.app.run</artifactId>
	<packaging>pom</packaging>
	<build>
		<plugins>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-resources-plugin</artifactId>
          <version>3.2.0</version>
          <executions>
              <execution>
                  <phase>validate</phase>
                  <goals>
                      <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                      <outputDirectory>${project.basedir}/org.adempiere.install/.maven.run/org.eclipse.equinox.simpleconfigurator</outputDirectory>
                      <resources>
                          <resource>
                              <directory>${project.basedir}/org.adempiere.install/.maven.run</directory>
                              <includes>
                                  <include>bundles.info</include>
                              </includes>
                              <filtering>true</filtering>
                          </resource>
                      </resources>
                  </configuration>
              </execution>
          </executions>
      </plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-eclipse-plugin</artifactId>
				<executions>
					<execution>
						<id>default-eclipse-run</id>
						<goals>
							<goal>eclipse-run</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<applicationArgs>
								<arg>-application</arg>
								<arg>org.adempiere.base.ModelGeneratorApplication</arg>
								<arg>-dev</arg>
								<arg>file:${project.basedir}/org.adempiere.install/.maven.run/dev.properties</arg>								
							</applicationArgs>
							<jvmArgs>
                <arg>-Dosgi.compatibility.bootdelegation=true</arg>
								<arg>-Dproject.basedir=${project.basedir}</arg>
                <arg>--add-modules=ALL-SYSTEM</arg>
								<arg>-Dfile.encoding=UTF-8</arg>
								<arg>-Dstdout.encoding=UTF-8</arg>
								<arg>-Dstderr.encoding=UTF-8</arg>
								<arg>-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005</arg>
								<arg>-Dswing.aatext=true</arg>
								<arg>-Dswing.plaf.metal.controlFont=Roboto-13</arg>
								<arg>-Dswing.plaf.metal.userFont=Roboto-13</arg>
								<arg>-Dosgi.noShutdown=true</arg>
							</jvmArgs>
							<work>org.adempiere.install/.maven.run</work>
							<installation>org.idempiere.p2.targetplatform/target/target-platform-repository</installation>
							<repositories>
								<repository>
									<id>iDempiere</id>
									<layout>p2</layout>
									<url>file:${project.basedir}/org.idempiere.p2.targetplatform/target/target-platform-repository</url>
								</repository>
							</repositories>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
</project>
