.kpi-arrow {
	border: solid;
	border-width: 0 3px 3px 0;
	display: inline-block;
	padding: 3px;
	text-align: center;
	vertical-align: middle;
}

.kpi-arrow-up {
	transform: rotate(-135deg);
	-webkit-transform: rotate(-135deg);
}

.kpi-arrow-down {
	transform: rotate(45deg);
	-webkit-transform: rotate(45deg);
}

.kpi-arrow-right {
	transform: rotate(-45deg);
	-webkit-transform: rotate(-45deg);
}

.kpi-data-negative {
	color: #A7444C;
}

.kpi-data-positive {
	color: #47734F;
}

.kpi-title {
	font-size: 35px;
	font-weight: bold;
	text-align: center;
	padding: 5px;
	padding-bottom: 10px;
}

.kpi-text {
	font-size: 15px;
	text-align: center;
	padding: 5px;
}

.kpi-sub-text {
	font-size: 13px;
	text-align: center;
	padding: 5px;
	color: grey;
}

.kpi-inline {
	display: inline;
}

.kpi-color-black {
	color: #443F4B;
}

.kpi-color-green-dark {
	color: #47734F;
}

.kpi-color-green-light {
	color: #73B680;
}

.kpi-color-red-dark {
	color: #A7444C;
}

.kpi-color-red-light {
	color: #ED4E52;
}

.kpi-color-blue-dark {
	color: #3B61B9;
}