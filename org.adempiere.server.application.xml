<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.idempiere</groupId>
		<artifactId>org.idempiere.parent</artifactId>
		<version>${revision}</version>
		<relativePath>org.idempiere.parent/pom.xml</relativePath>
	</parent>
	<properties>
		<skipClean>true</skipClean>
	</properties>
	<artifactId>org.adempiere.server.application.run</artifactId>
	<packaging>pom</packaging>
	<build>
		<plugins>
      <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-resources-plugin</artifactId>
          <version>3.2.0</version>
          <executions>
              <execution>
                  <phase>validate</phase>
                  <goals>
                      <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                      <outputDirectory>${project.basedir}/org.adempiere.server/.maven.run/org.eclipse.equinox.simpleconfigurator</outputDirectory>
                      <resources>
                          <resource>
                              <directory>${project.basedir}/org.adempiere.server/.maven.run</directory>
                              <includes>
                                  <include>bundles.info</include>
                              </includes>
                              <filtering>true</filtering>
                          </resource>
                      </resources>
                  </configuration>
              </execution>
          </executions>
      </plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-eclipse-plugin</artifactId>
				<executions>
					<execution>
						<id>default-eclipse-run</id>
						<goals>
							<goal>eclipse-run</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<applicationArgs>
								<arg>-application</arg>
								<arg>org.adempiere.server.application</arg>
								<arg>-dev</arg>
								<arg>file:${project.basedir}/org.adempiere.server/.maven.run/dev.properties</arg>
								<arg>-product</arg>
								<arg>org.adempiere.server.product</arg>
								<arg>-console</arg>
							</applicationArgs>
							<jvmArgs>
								<arg>-Dosgi.compatibility.bootdelegation=true</arg>
								<arg>-Dorg.osgi.framework.bootdelegation=sun.security.ssl</arg>
								<arg>-Dproject.basedir=${project.basedir}</arg>
								<arg>-Djetty.home=jettyhome</arg>
								<arg>-Djetty.etc.config.urls=etc/jetty-bytebufferpool.xml,etc/jetty-threadpool.xml,etc/jetty.xml,etc/jetty-http.xml,etc/jetty-deploy.xml,etc/jetty-ssl-context.xml,etc/jetty-ssl.xml,etc/jetty-https.xml,etc/jetty-http-forwarded.xml</arg>
								<arg>-Dhazelcast.config=hazelcast.xml</arg>
								<arg>-Dorg.apache.cxf.osgi.http.transport.disable=true</arg>
								<arg>-Dorg.eclipse.swt.graphics.Resource.reportNonDisposed=true</arg>
								<arg>--add-modules=java.se</arg>
								<arg>--add-modules=ALL-SYSTEM</arg>
								<arg>--add-opens=java.base/java.lang=ALL-UNNAMED</arg>
								<arg>--add-opens=java.base/java.nio=ALL-UNNAMED</arg>
								<arg>--add-opens=java.base/sun.nio.ch=ALL-UNNAMED</arg>
								<arg>--add-opens=java.management/sun.management=ALL-UNNAMED</arg>
								<arg>--add-opens=jdk.management/com.sun.management.internal=ALL-UNNAMED</arg>
								<arg>--add-exports=java.base/jdk.internal.ref=ALL-UNNAMED</arg>
								<arg>--add-exports=java.desktop/sun.awt=ALL-UNNAMED</arg>
								<arg>--add-exports=java.sql.rowset/com.sun.rowset=ALL-UNNAMED</arg>
								<arg>--add-exports=java.naming/com.sun.jndi.ldap=ALL-UNNAMED</arg>
								<arg>-Dfile.encoding=UTF-8</arg>
								<arg>-Dstdout.encoding=UTF-8</arg>
								<arg>-Dstderr.encoding=UTF-8</arg>
								<arg>-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005</arg>
								<arg>-Dgosh.args=--nointeractive -sc telnetd -p12612 start</arg>
							</jvmArgs>
							<work>org.adempiere.server/.maven.run</work>
							<installation>org.idempiere.p2.targetplatform/target/target-platform-repository</installation>
							<repositories>
								<repository>
									<id>iDempiere</id>
									<layout>p2</layout>
									<url>file:${project.basedir}/org.idempiere.p2.targetplatform/target/target-platform-repository</url>
								</repository>
							</repositories>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
</project>
